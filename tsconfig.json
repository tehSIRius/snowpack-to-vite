{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "declaration": true,
        "inlineSourceMap": true,
        "outDir": "dist",
        "rootDirs": [
            "src",
            "bin"
        ],
        "strict": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "types": [
            "node",
            "vitest/globals"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "src",
        "bin"
    ],
    "exclude": [
        "node_modules"
    ]
}